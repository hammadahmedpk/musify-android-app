<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ListenLater">

    <!-- Back Arrow Button and Record Music -->
    <RelativeLayout
        android:id="@+id/listenlaterbar"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="true"
            android:id="@+id/backarrow"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/backarrow_page9" />
        <TextView
            android:id="@+id/recordmusictext"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Listen Later"
            android:textColor="@color/white"
            android:textSize="29dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/aboveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listenlaterbar"
        android:layout_marginLeft="20dp"
        android:text="2 Options / Left Selected"
        android:textColor="#3E3B3B"
        android:textSize="15dp"
        android:textStyle="bold" />
    <!--  Buttons  -->
    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_below="@id/aboveText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/liked_rounded_btn"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:weightSum="1">
            <Button
                android:id="@+id/playlistBtn"
                app:backgroundTint="@null"
                android:layout_marginTop="6dp"
                android:layout_alignParentStart="true"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Playlist"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_yellow_button"/>
            <Button
                android:id="@+id/musicBtn"
                app:backgroundTint="@null"
                android:layout_marginTop="6dp"
                android:layout_alignParentStart="true"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Music"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:background="@drawable/comment_box"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Songs-->
    <RelativeLayout
        android:layout_below="@id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <!-- First Song -->
        <RelativeLayout
            android:id="@+id/song1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/playlist_screen5" />
            <TextView
                android:id="@+id/text1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist 1"
                android:textSize="18dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/text2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/image1"
                android:layout_below="@id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textSize="18dp"
                android:textColor="@color/yellow"/>
            <ImageView
                android:id="@+id/options1"
                android:layout_width="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_height="20dp"
                android:src="@drawable/options"/>

            <TextView
                android:id="@+id/sideText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/options1"
                android:paddingBottom="20dp"
                android:text="Tracks: 8"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>
        <!-- Second Song -->
        <RelativeLayout
            android:id="@+id/song2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/song1"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/playlist_screen5" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image2"
                android:text="Playlist 2"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image2"
                android:text="Artist"
                android:textColor="@color/yellow"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/options2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/options" />

            <TextView
                android:id="@+id/sideText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/options2"
                android:paddingBottom="20dp"
                android:text="Tracks: 3"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

    </RelativeLayout>

    <!--  Like, Add, Search Buttons -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#2A2831">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/like_page5" />

            <TextView
                android:id="@+id/like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/like"
                android:layout_marginRight="50dp"
                android:paddingLeft="8dp"
                android:text="Liked"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/like"
                android:src="@drawable/plus_page5" />

            <TextView
                android:id="@+id/add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/like_text"
                android:text="Add"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/add"
                android:src="@drawable/search_page5" />

            <TextView
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@id/add_text"
                android:text="Search"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/listen_later"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/search"
                android:src="@drawable/listen_later_page5" />
            <TextView
                android:id="@+id/listen_later_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listen_later"
                android:layout_toRightOf="@id/search_text"
                android:text="Listen Later"
                android:textColor="@color/white" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>