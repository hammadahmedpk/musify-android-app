<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MusicLibrary">
    
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Sidebar Button and Profile Button -->
            <RelativeLayout
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/sidebar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/sidebar2"></ImageButton>
                <ImageButton
                    android:id="@+id/profileBtn"
                    android:backgroundTint="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/profile_page26">
                </ImageButton>
            </RelativeLayout>

            <!-- Playlists Images and Text -->
            <TextView
                android:id="@+id/playlist_text"
                android:layout_below="@id/topbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Playlists"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/white"/>
            <HorizontalScrollView
                android:id="@+id/playlist_scroll"
                android:layout_below="@id/playlist_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/playlist1"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/playlist_screen5"/>
                    <TextView
                        android:id="@+id/playlist_t1"
                        android:layout_below="@id/playlist1"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Playlist 1"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/playlist2"
                        android:layout_toRightOf="@id/playlist1"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/playlist_screen5"/>
                    <TextView
                        android:id="@+id/playlist_t2"
                        android:layout_below="@id/playlist2"
                        android:layout_toRightOf="@id/playlist_t1"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Playlist 2"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/playlist3"
                        android:layout_toRightOf="@id/playlist2"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/playlist_screen5"/>
                    <TextView
                        android:id="@+id/playlist_t3"
                        android:layout_below="@id/playlist3"
                        android:layout_toRightOf="@id/playlist_t2"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Playlist 3"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/playlist4"
                        android:layout_toRightOf="@id/playlist3"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/playlist_screen5"/>
                    <TextView
                        android:id="@+id/playlist_t4"
                        android:layout_below="@id/playlist4"
                        android:layout_toRightOf="@id/playlist_t3"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Playlist 4"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/playlist5"
                        android:layout_toRightOf="@id/playlist4"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/playlist_screen5"/>
                    <TextView
                        android:id="@+id/playlist_t5"
                        android:layout_below="@id/playlist5"
                        android:layout_toRightOf="@id/playlist_t4"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Playlist 5"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/playlist6"
                        android:layout_toRightOf="@id/playlist5"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/playlist_screen5"/>
                    <TextView
                        android:id="@+id/playlist_t6"
                        android:layout_below="@id/playlist6"
                        android:layout_toRightOf="@id/playlist_t5"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Playlist 6"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                </RelativeLayout>
            </HorizontalScrollView>

            <!-- Artists Images and Text -->
            <TextView
                android:id="@+id/artist_text"
                android:layout_below="@id/playlist_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Artists"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/white"/>
            <HorizontalScrollView
                android:id="@+id/artist_scroll"
                android:layout_below="@id/artist_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/artist1"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/celebrity"/>
                    <TextView
                        android:id="@+id/artist1_t1"
                        android:layout_below="@id/artist1"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Artist 1"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/artist2"
                        android:layout_toRightOf="@id/artist1"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/celebrity"/>
                    <TextView
                        android:id="@+id/artist1_t2"
                        android:layout_below="@id/artist2"
                        android:layout_toRightOf="@id/artist1_t1"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Artist 2"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/artist3"
                        android:layout_toRightOf="@id/artist2"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/celebrity"/>
                    <TextView
                        android:id="@+id/artist1_t3"
                        android:layout_below="@id/artist3"
                        android:layout_toRightOf="@id/artist1_t2"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Artist 3"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/artist4"
                        android:layout_toRightOf="@id/artist3"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/celebrity"/>

                    <TextView
                        android:id="@+id/artist1_t4"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:layout_below="@id/artist4"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@id/artist1_t3"
                        android:paddingLeft="10dp"
                        android:text="Artist 4"
                        android:textColor="#FCC40F"
                        android:textSize="17dp" />
                    <ImageView
                        android:id="@+id/artist5"
                        android:layout_toRightOf="@id/artist4"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/celebrity"/>
                    <TextView
                        android:id="@+id/artist1_t5"
                        android:layout_below="@id/artist5"
                        android:layout_toRightOf="@id/artist1_t4"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Artist 5"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                    <ImageView
                        android:id="@+id/artist6"
                        android:layout_toRightOf="@id/artist5"
                        android:layout_width="120dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/celebrity"/>
                    <TextView
                        android:id="@+id/artist1_t6"
                        android:layout_below="@id/artist6"
                        android:layout_toRightOf="@id/artist1_t5"
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Artist 6"
                        android:textSize="17dp"
                        android:textColor="#FCC40F"/>
                </RelativeLayout>
            </HorizontalScrollView>

            <!-- Song Play and Pause Buttons -->
            <RelativeLayout
                android:id="@+id/song_buttons"
                android:layout_above="@id/footer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/play_song_border"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:text="Song Name"
                    android:textColor="#FCC40F"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="120dp"
                    android:src="@drawable/songname_back_screen5" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/songname_pause_screen5" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/songname_forward_screen5"/>

            </RelativeLayout>

            <!--     Like, Add, Search Buttons -->
            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:background="#2A2831">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:src="@drawable/like_page5" />

                    <TextView
                        android:id="@+id/like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/like"
                        android:layout_marginRight="50dp"
                        android:paddingLeft="8dp"
                        android:text="Liked"
                        android:textColor="@color/white" />

                    <ImageView
                        android:clickable="true"
                        android:id="@+id/add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="50dp"
                        android:layout_toRightOf="@id/like"
                        android:src="@drawable/plus_page5" />

                    <TextView
                        android:id="@+id/add_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/add"
                        android:layout_marginRight="50dp"
                        android:layout_toRightOf="@id/like_text"
                        android:text="Add"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="50dp"
                        android:layout_toRightOf="@id/add"
                        android:src="@drawable/search_page5" />

                    <TextView
                        android:id="@+id/search_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search"
                        android:layout_marginRight="25dp"
                        android:layout_toRightOf="@id/add_text"
                        android:text="Search"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/listen_later"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@id/search"
                        android:src="@drawable/listen_later_page5" />
                    <TextView
                        android:id="@+id/listen_later_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/listen_later"
                        android:layout_toRightOf="@id/search_text"
                        android:text="Listen Later"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:background="@drawable/brown_gradient">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/brown_circle"
                app:civ_border_color="@color/black" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/yellow"/>
            <Button
                android:id="@+id/messenger"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messenger"
                android:textSize="18dp"
                android:backgroundTint="@color/brown"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/yellow"/>
            <Button
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="18dp"
                android:backgroundTint="@color/brown"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/yellow"/>
            <Button
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="18dp"
                android:backgroundTint="@color/brown"
                android:textStyle="bold"
                android:shadowColor="@color/brown"
                android:textAllCaps="false"
                android:textColor="@color/yellow"/>
            <!--  Logout Button   -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp">
                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:textSize="18dp"
                    android:backgroundTint="@color/brown"
                    android:textStyle="bold"
                    android:shadowColor="@color/brown"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/logout"
                    android:layout_marginTop="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logout_page8"/>
            </RelativeLayout>

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>